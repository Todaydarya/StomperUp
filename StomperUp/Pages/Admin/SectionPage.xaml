<Page x:Class="StomperUp.Pages.Admin.SectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StomperUp.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SectionPage">

    <Grid>
        <ItemsControl Name="itemSection" Grid.Column="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="20" Margin="10" BorderThickness="2" BorderBrush="Black" Width="550" Height="100">
                        <StackPanel>
                            <TextBlock Text="{Binding nameSection}"/>
                            <TextBlock Text="{Binding material}"/>
                            <TextBlock Text="{Binding question}"/>
                            <TextBlock Text="{Binding answer}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
