<Window x:Class="StomperUp.Windows.GmailVerification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StomperUp.Windows"
        mc:Ignorable="d"
        Title="GmailVerification" Height="300" Width="500">
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Name="spEmail">
            <TextBlock Text="Введите вашу почту" HorizontalAlignment="Center"/>
            <TextBox Name="tbEmail" Margin="0 30"/>
            <Button Name="btnCheckEmail" Content="Отправить" Click="btnCheckEmail_Click" Template="{StaticResource btnStyleMain}"/>
        </StackPanel>

        <StackPanel Name="spCheck" Visibility="Collapsed">
            <TextBlock Text="Введите Код" HorizontalAlignment="Center"/>
            <TextBox Name="tbCode" Margin="0 30"/>
            <Button Name="btnCheckCode" Content="Проверить" Click="btnCheckCode_Click" Template="{StaticResource btnStyleMain}"/>
            <TextBlock Text="Код не пришёл" HorizontalAlignment="Center" Opacity="0.5" FontSize="18" MouseDown="TextBlock_MouseDown"/>
        </StackPanel>

    </StackPanel>
</Window>
