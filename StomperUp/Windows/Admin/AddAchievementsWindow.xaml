<Window x:Class="StomperUp.Windows.Admin.AddAchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:StomperUp.Windows.Admin"
        mc:Ignorable="d"
        Title="Добавить достижение" Width="320" Height="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Name="btnPicturePath" Click="btnPicturePath_Click" Width="100" Height="100" Padding="0">
            <Image Name="imgPreview" Width="100" Height="100" Margin="0"/>
        </Button>
        <TextBox Name="tbName" materialDesign:HintAssist.Hint="Наименование достижения" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <TextBox Name="tbCoin" materialDesign:HintAssist.Hint="Монеты" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <TextBox Name="tbDescription" materialDesign:HintAssist.Hint="Описание" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        
        <Button Name="btnNext" Content="Сохранить" Click="btnNext_Click"/>
    </StackPanel>
</Window>
