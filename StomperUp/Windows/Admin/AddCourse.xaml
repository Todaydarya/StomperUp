<Window x:Class="StomperUp.Windows.Admin.AddCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:StomperUp.Windows.Admin"
        mc:Ignorable="d"
        Title="Добавить курс" Width="320" Height="210" WindowStartupLocation="CenterScreen">

    <Border CornerRadius="20">
        <StackPanel Orientation="Vertical">
            <TextBox Name="tbNameCourse" materialDesign:HintAssist.Hint="Название курса" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            <ComboBox Name="cbProgrammingLanguage" materialDesign:HintAssist.Hint="Язык программирования">
                <ComboBoxItem Content="C#"/>
                <ComboBoxItem Content="C++"/>
            </ComboBox>
            <Button Name="btnNext" Content="Сохранить" Click="btnNext_Click"/>
        </StackPanel>
    </Border>
</Window>
