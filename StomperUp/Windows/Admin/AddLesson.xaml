<Window x:Class="StomperUp.Windows.Admin.AddLesson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:StomperUp.Windows.Admin"
        mc:Ignorable="d"
        Title="Добавить урок">
    
    <StackPanel Orientation="Vertical">
        <TextBox Name="tbNameLesson" materialDesign:HintAssist.Hint="Название урока" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <TextBox Name="tbCoin" materialDesign:HintAssist.Hint="Монеты за прохождение" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
        <Button Name="btnNext" Content="Сохранить" Click="btnNext_Click"/>
    </StackPanel>
</Window>
